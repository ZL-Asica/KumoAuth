{
  "name": "kumo-auth",
  "type": "module",
  "author": {
    "name": "ZL Asica",
    "email": "zl@zla.app"
  },
  "license": "MIT",
  "homepage": "https://www.github.com/ZL-Asica/KumoAuth",
  "bugs": "https://www.github.com/ZL-Asica/KumoAuth/issues",
  "funding": "https://github.com/sponsors/ZL-Asica",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint 'src/**/*.{js,jsx,mjs,cjs,ts,tsx,mtx}'",
    "lint:fix": "eslint 'src/**/*.{js,jsx,mjs,cjs,ts,tsx,mtx}' --fix",
    "test": "vitest --ui",
    "test:ci": "vitest run",
    "dev": "wrangler dev",
    "deploy": "wrangler deploy --minify",
    "db:init": "wrangler d1 execute kumo-auth --local --file=./db/schema.sql",
    "postinstall": "husky"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "**/*.{css,json,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@hono/zod-openapi": "^0.18.0",
    "@scalar/hono-api-reference": "^0.5.160",
    "bad-words": "^4.0.0",
    "bcryptjs": "^2.4.3",
    "hono": "^4.6.11",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.5.29",
    "@cloudflare/workers-types": "^4.20241112.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^22.9.1",
    "@vitest/ui": "2.1.5",
    "@zl-asica/prettier-config": "^1.0.9",
    "eslint-config-zl-asica": "^1.0.18",
    "globals": "^15.12.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "typescript": "^5.6.3",
    "vite": "^5.4.11",
    "vite-tsconfig-paths": "^5.1.3",
    "vitest": "2.1.5",
    "wrangler": "^3.88.0"
  },
  "engines": {
    "node": ">=20.11"
  },
  "overrides": {
    "vitest": "2.0.5",
    "@vitest/ui": "2.0.5"
  },
  "packageManager": "pnpm@9.14.2"
}
