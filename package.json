  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint src/**/* --fix",
    "test": "vitest --ui",
    "test:ci": "vitest run",
    "dev": "wrangler dev",
    "deploy": "wrangler deploy --minify",
    "db:init": "wrangler d1 execute kumo-auth --local --file=./db/schema.sql",
    "postinstall": "husky"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix"
    ],
    "src/**/*.{ts,tsx,js,jsx,md}": [
      "prettier --write --ignore-unknown"
    ]
  },
  "dependencies": {
    "@hono/zod-openapi": "^0.16.4",
    "@scalar/hono-api-reference": "^0.5.158",
    "bad-words": "^4.0.0",
    "bcryptjs": "^2.4.3",
    "hono": "^4.6.9",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.5.24",
    "@cloudflare/workers-types": "^4.20241022.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^22.9.0",
    "@vitest/ui": "2.0.5",
    "@zl-asica/prettier-config": "^1.0.7",
    "eslint-config-zl-asica": "^1.0.14",
    "globals": "^15.12.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "typescript": "^5.6.3",
    "vite": "^5.4.10",
    "vite-tsconfig-paths": "^5.1.0",
    "vitest": "2.0.5",
    "wrangler": "^3.84.1"
  },
  "engines": {
    "node": ">=20.11"
  },
  "overrides": {
    "vitest": "2.0.5",
    "@vitest/ui": "2.0.5"
  },
  "packageManager": "pnpm@9.12.3"
}
